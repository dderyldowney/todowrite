{
  "conventional_commits_enforced": true,
  "enforcement_level": "strict",
  "pre_commit_hooks": {
    "conventional_pre_commit": {
      "enabled": true,
      "repo": "https://github.com/compilerla/conventional-pre-commit",
      "rev": "v3.3.0",
      "stages": [
        "commit-msg"
      ],
      "validation_types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    },
    "semantic_scope_validator": {
      "enabled": true,
      "local": true,
      "stages": [
        "commit-msg"
      ],
      "entry": "./.hooks/semantic-scope-validator.py"
    }
  },
  "commit_format_rules": {
    "required_pattern": "^(type)[(scope)]: description$",
    "type_required": true,
    "scope_required": true,
    "subject_required": true,
    "subject_capitalized": true,
    "subject_max_length": 72,
    "no_period_at_end": true,
    "body_max_line_length": 72,
    "footer_max_line_length": 72
  },
  "allowed_types": [
    "feat",
    "fix",
    "docs",
    "style",
    "refactor",
    "perf",
    "test",
    "build",
    "ci",
    "chore",
    "revert"
  ],
  "semantic_scopes": {
    "lib": {
      "description": "Core todowrite library",
      "patterns": [
        "lib_package/",
        "src/todowrite/",
        "todowrite/"
      ],
      "required": true
    },
    "cli": {
      "description": "Command-line interface",
      "patterns": [
        "cli_package/",
        "src/todowrite_cli/",
        "todowrite_cli/"
      ],
      "required": true
    },
    "web": {
      "description": "Web interface",
      "patterns": [
        "web_package/",
        "src/todowrite_web/",
        "todowrite_web/"
      ],
      "required": true
    },
    "tests": {
      "description": "Test suite and testing infrastructure",
      "patterns": [
        "tests/",
        "test_",
        "_test.py"
      ],
      "required": true
    },
    "docs": {
      "description": "Documentation",
      "patterns": [
        "docs/",
        "*.md",
        "README*",
        "CHANGELOG*"
      ],
      "required": true
    },
    "build": {
      "description": "Build system and packaging",
      "patterns": [
        "pyproject.toml",
        "setup.py",
        "Makefile",
        "Dockerfile",
        "docker-compose*",
        "build/",
        "dist/"
      ],
      "required": true
    },
    "config": {
      "description": "Configuration files and settings",
      "patterns": [
        ".pre-commit-config.yaml",
        "commitlint.config.js",
        ".env*",
        "*.ini",
        "*.cfg",
        "config/"
      ],
      "required": true
    },
    "ci": {
      "description": "Continuous integration and deployment",
      "patterns": [
        ".github/",
        ".gitlab-ci.yml",
        ".circleci/"
      ],
      "required": true
    },
    "deps": {
      "description": "Dependencies and requirements",
      "patterns": [
        "requirements*",
        "poetry.lock",
        "Pipfile*"
      ],
      "required": true
    }
  },
  "enforcement_mechanisms": {
    "pre_commit_hook": true,
    "commit_msg_validation": true,
    "format_validation": true,
    "type_validation": true,
    "scope_validation": true,
    "subject_validation": true,
    "line_length_validation": true,
    "semantic_scope_validation": true
  },
  "examples": {
    "good_commits": [
      "feat(lib): add hierarchical task relationship support",
      "fix(cli): resolve authentication timeout issue",
      "test(web): add comprehensive coverage for user interface",
      "docs(readme): update installation instructions",
      "refactor(config): simplify database connection logic"
    ],
    "bad_commits": [
      "Add new feature",
      "feat: add new feature",
      "fix(config): fix stuff",
      "implement comprehensive system"
    ]
  },
  "agent_enforcement": {
    "all_agents_required": true,
    "human_agents": true,
    "ai_agents": true,
    "subagent_driven_development": true,
    "test_driven_development": true,
    "code_review_agents": true,
    "planning_agents": true
  },
  "integration_features": {
    "changelog_generation": true,
    "semantic_versioning": true,
    "automated_release_notes": true,
    "git_integration": true,
    "ci_cd_pipeline_support": true,
    "cross_agent_consistency": true
  },
  "error_handling": {
    "reject_invalid_commits": true,
    "provide_helpful_errors": true,
    "suggest_corrections": true,
    "show_examples": true,
    "display_allowed_scopes": true
  },
  "enabled_time": "2025-11-11T16:56:39.740981",
  "permanent_enforcement": true,
  "applies_to_all_sessions": true,
  "auto_install_hooks": true,
  "semantic_scoping_required": true
}