{
  "mcp_version": "2025.1",
  "plugin_name": "superpowers",
  "plugin_version": "2.1.0",
  "description": "2025 industry-standard superpowers skills with enhanced security, performance, and monitoring",
  "security": {
    "authentication_required": false,
    "skill_validation": true,
    "code_execution_sandbox": true,
    "dependency_verification": true,
    "security_scan_frequency": "real-time",
    "allowed_skill_dependencies": [
      "anthropic",
      "openai",
      "sqlalchemy",
      "pytest",
      "ruff",
      "bandit"
    ],
    "forbidden_patterns": [
      "subprocess.Popen_unsafe",
      "eval_unsafe",
      "exec_unsafe",
      "shell_injection"
    ]
  },
  "performance": {
    "caching_enabled": true,
    "cache_strategy": "lru_with_ttl",
    "cache_size_mb": 100,
    "cache_ttl_minutes": 30,
    "parallel_execution": true,
    "max_concurrent_skills": 3,
    "timeout_ms": 25000,
    "memory_limit_mb": 512,
    "performance_profiling": true
  },
  "skills_directory": "~/.claude/plugins/cache/superpowers/skills",
  "auto_discovery": true,
  "skill_execution": {
    "validation_enabled": true,
    "error_handling": "graceful",
    "retry_attempts": 2,
    "retry_delay_ms": 1000,
    "progress_tracking": true
  },
  "monitoring": {
    "execution_analytics": true,
    "performance_metrics": true,
    "error_tracking": true,
    "usage_statistics": true,
    "skill_success_rates": true,
    "detailed_logging": true,
    "log_retention_days": 30
  },
  "workspace_integration": {
    "git_operations": true,
    "file_system_access": "sandboxed",
    "environment_variables": "restricted",
    "network_access": "controlled",
    "api_access": "validated"
  },
  "skill_categories": {
    "development": [
      "test-driven-development",
      "systematic-debugging",
      "root-cause-tracing",
      "verification-before-completion"
    ],
    "planning": [
      "brainstorming",
      "writing-plans",
      "executing-plans"
    ],
    "collaboration": [
      "receiving-code-review",
      "requesting-code-review",
      "sharing-skills"
    ],
    "workflow": [
      "using-superpowers",
      "using-git-worktrees",
      "condition-based-waiting",
      "defense-in-depth"
    ],
    "testing": [
      "testing-skills-with-subagents",
      "testing-anti-patterns"
    ],
    "architecture": [
      "subagent-driven-development",
      "finishing-a-development-branch"
    ]
  },
  "quality_assurance": {
    "skill_testing_required": true,
    "code_quality_standards": true,
    "documentation_standards": true,
    "type_checking": true,
    "security_review": true
  },
  "token_optimization": {
    "hal_integration": true,
    "token_sage_integration": true,
    "context_optimization": true,
    "semantic_filtering": true,
    "intelligent_caching": true
  },
  "compliance": {
    "industry_standards": [
      "iso_27001",
      "soc2_type2",
      "gdpr"
    ],
    "data_privacy": {
      "encryption_at_rest": true,
      "encryption_in_transit": true,
      "data_minimization": true
    },
    "audit_logging": {
      "enabled": true,
      "log_format": "json",
      "correlation_ids": true
    }
  },
  "features_2025": {
    "enhanced_error_recovery": true,
    "intelligent_skill_recommendation": true,
    "adaptive_timeout_handling": true,
    "real_time_performance_monitoring": true,
    "skill_success_prediction": true,
    "automated_quality_gates": true
  },
  "integration_points": {
    "hal_agent": {
      "enabled": true,
      "path": "dev_tools/agent_controls/hal_token_savvy_agent.py",
      "timeout_ms": 10000,
      "auto_preprocessing": true
    },
    "token_optimization": {
      "enabled": true,
      "path": "dev_tools/token_optimization/unified_token_manager.py",
      "optimization_strategies": [
        "semantic_filtering",
        "content_compression",
        "intelligent_caching"
      ]
    },
    "episodic_memory": {
      "enabled": true,
      "search_integration": true,
      "skill_learning": true
    }
  },
  "max_allowed_tokens": 40000
}
