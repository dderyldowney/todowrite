#!/usr/bin/env python3
# type: ignore

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import add_task, get_active_items  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Add a new task to the active step.")
    parser.add_argument("title", type=str, help="The title of the task.")
    parser.add_argument("--description", type=str, default="", help="The description of the task.")
    args = parser.parse_args()

    active_items = get_active_items()
    active_step = active_items.get("step")

    if not active_step:
        print(
            "Error: No active step. Please activate a step first using './bin/step-activate <step_id>'."
        )
        sys.exit(1)

    new_task, error = add_task(active_step["id"], args.title, args.description)

    if error:
        print(f"Error: {error}")
        sys.exit(1)

    if new_task:
        print("âœ“ Task added successfully!")
        print(f"  ID: {new_task['id']}")
        print(f"  Title: {new_task['title']}")
        print(f"  Status: {new_task['status']}")
        print()
        print("Use './bin/step-status' to view all tasks in the active step.")


if __name__ == "__main__":
    main()
