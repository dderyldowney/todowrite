#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import activate_phase, end_phase  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Mark a phase as complete.")
    parser.add_argument("phase_id", type=str, help="The ID of the phase to complete.")
    parser.add_argument(
        "--force", action="store_true", help="Force completion even if steps are incomplete."
    )
    args = parser.parse_args()

    # To complete a phase, it must first be active.
    _, error = activate_phase(args.phase_id)
    if error:
        print(f"Error activating phase: {error}")
        sys.exit(1)

    completed_phase, error = end_phase(force=args.force)

    if error:
        print(f"Error: {error}")
        sys.exit(1)

    if completed_phase:
        print("âœ“ Phase marked as completed!")
        print(f"  ID: {completed_phase['id']}")
        print(f"  Title: {completed_phase['title']}")
        print(f"  Completed at: {completed_phase['date_completed']}")
        print()
        print("Use './bin/phase-list-all' to view all phases.")


if __name__ == "__main__":
    main()
