#!/usr/bin/env python3
# type: ignore

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import pause_task  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Pause a task.")
    parser.add_argument("task_id", type=str, help="The ID of the task to pause.")
    args = parser.parse_args()

    success, error = pause_task(args.task_id)

    if error:
        print(f"Error: {error}")
        sys.exit(1)

    if success:
        print(f"âœ“ Task ''{args.task_id}'' paused successfully!")


if __name__ == "__main__":
    main()
