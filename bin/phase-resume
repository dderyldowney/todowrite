# type: ignore
#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import resume_paused_phase  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Resume a paused development phase.")
    parser.parse_args() # Call parse_args to handle --help and other argparse features

    resumed_phase, error = resume_paused_phase()

    if error:
        print(f"Error: {error}")
        sys.exit(1)
    
    if resumed_phase:
        print("âœ“ Development phase resumed successfully!")
        print(f"  Phase: {resumed_phase.get('name', 'Unknown Phase')}")
        print(f"  Resumed at: {resumed_phase['resumed_at']}")
        print()
        print("Use './bin/phase-status' to view phase status.")
        print("Use './bin/phase-add' to add steps or './bin/phase-complete' to complete steps.")

if __name__ == "__main__":
    main()