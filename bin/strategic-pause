#!/usr/bin/env python3
# type: ignore

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import load_todos, save_todos  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Pause a strategic goal.")
    parser.add_argument("goal_id", type=str, help="The ID of the strategic goal to pause.")
    args = parser.parse_args()

    todos = load_todos()
    goals = todos["goals"]
    goal_found = False
    for goal in goals:
        if goal["id"] == args.goal_id:
            if goal["status"] == "done":
                print(f"Error: Goal '{args.goal_id}' is already done and cannot be paused.")
                sys.exit(1)
            goal["status"] = "blocked"
            goal_found = True
            break

    if not goal_found:
        print(f"Error: Goal with ID '{args.goal_id}' not found.")
        sys.exit(1)

    save_todos(todos)
    print(f"âœ“ Goal '{args.goal_id}' paused successfully!")


if __name__ == "__main__":
    main()
