# type: ignore
#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import pause_active_phase  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Pause the current development phase.")
    parser.parse_args() # Call parse_args to handle --help and other argparse features

    paused_phase, error = pause_active_phase()

    if error:
        print(f"Error: {error}")
        sys.exit(1)
    
    if paused_phase:
        print("âœ“ Development phase paused successfully!")
        print(f"  Phase: {paused_phase.get('name', 'Unknown Phase')}")
        print(f"  Paused at: {paused_phase['paused_at']}")
        print()
        print("Use './bin/phase-status' to view phase status.")
        print("Use './bin/phase-resume' to resume the phase.")

if __name__ == "__main__":
    main()