#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path

# Add project root to sys.path
project_root = Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from afs_fastapi.core.todos_manager import add_phase  # noqa: E402


def main():
    parser = argparse.ArgumentParser(description="Add a new phase to a goal.")
    parser.add_argument(
        "--goal-id", required=True, type=str, help="The ID of the goal to add the phase to."
    )
    parser.add_argument("--title", required=True, type=str, help="The title of the new phase.")
    parser.add_argument(
        "--description", required=True, type=str, help="The description of the new phase."
    )
    args = parser.parse_args()

    new_phase, error = add_phase(args.goal_id, args.title, args.description)

    if error:
        print(f"Error: {error}")
        sys.exit(1)

    if new_phase:
        print("âœ“ Phase added successfully!")
        print(f"  ID: {new_phase['id']}")
        print(f"  Title: {new_phase['title']}")
        print(f"  Description: {new_phase['description']}")
        print(f"  Status: {new_phase['status']}")
        print()
        print("Use './bin/phase-list-all' to view all phases.")


if __name__ == "__main__":
    main()
